{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>Video</h1>
    <P>add search with angular, but what about pagination?</P>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Certificate</th>
                <td>{{ entity.certificate }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ entity.director }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('video') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('video_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
